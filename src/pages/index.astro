---
import "../styles/global.css";
---

<html lang="de">
	<head>
		<meta charset="utf-8" />
		<!-- Favicon / App Icon -->
		<link rel="apple-touch-icon" sizes="180x180" href="/app-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/app-icon.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/app-icon.png" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<!-- Google Font: Nunito -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&family=Fredoka:wght@400;600;700&display=swap"
			rel="stylesheet"
		/>
		<title>Bummeln – Reise-Reminder App für Entdecker</title>
		<meta
			name="description"
			content="Bummeln ist deine Reise-Begleitung: lasse dich benachrichtigen, wenn du in die Nähe gespeicherter Spots kommst, sammle Notizen und starte sofort die Route – perfekt für City-Trips."
		/>
		<meta
			name="keywords"
			content="Bummeln App, Reise App, Travel Reminder, Karten App, Spots entdecken, Sightseeing Route, Offline Karte, Traveler Helper, Places Reminder"
		/>
		<link rel="canonical" href="https://bummeln.app/" />

		<!-- Open Graph -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content="Bummeln – Reise-Reminder App für Entdecker" />
		<meta property="og:description" content="Entdecke Orte ohne Karten-Scrolling. Bummeln erinnert dich automatisch und startet auf Wunsch direkt die Route." />
		<meta property="og:image" content="https://bummeln.app/app-icon.png" />
		<meta property="og:url" content="https://bummeln.app/" />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Bummeln – Reise-Reminder App für Entdecker" />
		<meta name="twitter:description" content="Orte erleben statt Karten scrollen – mit der Bummeln App." />
		<meta name="twitter:image" content="https://bummeln.app/app-icon.png" />

		<!-- Structured Data -->
		<script type="application/ld+json" is:inline>
		  {
			"@context": "https://schema.org",
			"@type": "MobileApplication",
			"name": "Bummeln",
			"operatingSystem": "iOS",
			"applicationCategory": "TravelApplication",
			"offers": {
			  "@type": "Offer",
			  "price": "1.99",
			  "priceCurrency": "EUR"
			},
			"description": "Bummeln erinnert dich automatisch an spannende Orte in deiner Nähe und startet bei Bedarf sofort die Route.",
			"url": "https://bummeln.app/",
			"image": "https://bummeln.app/app-icon.png"
		  }
		</script>
	</head>
	<body class="font-nunito text-slate-800 bg-white">
		<!-- Hero ------------------------------------------------------------------>
		<header class="relative overflow-hidden">
			<!-- Language Switcher -->
			<div class="absolute top-4 right-6 z-20 flex gap-2 text-sm">
				<button data-lang="en" class="lang-btn font-semibold">EN</button>
				<button data-lang="de" class="lang-btn opacity-60 hover:opacity-100">DE</button>
			</div>
			<div
				id="heroGradient"
				class="absolute inset-0 bg-gradient-to-br from-brand-pink via-brand-blue/30 to-transparent pointer-events-none will-change-transform"
			></div>
			<!-- Organic blobs -->
			<div class="absolute -top-32 -left-32 h-80 w-80 rounded-full bg-brand-pink opacity-40 blur-3xl animate-pulse pointer-events-none"></div>
			<div class="absolute bottom-0 right-0 translate-x-1/2 translate-y-1/2 h-96 w-96 rounded-full bg-brand-blue opacity-40 blur-3xl animate-pulse pointer-events-none"></div>
			<!-- Content -->
			<div
				class="relative z-10 mx-auto flex min-h-screen max-w-5xl flex-col-reverse items-center justify-center gap-12 px-6 md:flex-row md:items-center md:text-left"
			>
				<!-- Left: copy -->
				<div class="flex-1">
					<h1 data-i18n="heroHeadline" class="max-w-2xl text-4xl font-extrabold md:text-6xl text-brand-pink">
						Bummeln&nbsp;–
						<span class="relative inline-block before:absolute before:-inset-y-2 before:-inset-x-2 before:-skew-y-3 before:bg-brand-blue/60 before:rounded-sm before:-z-10">
							Discover&nbsp;places
						</span>,<br class="hidden md:inline" />
						not scrolling maps
					</h1>
					<p class="mt-6 max-w-xl text-lg md:text-xl">
						Lass dich benachrichtigen, wenn du in die Nähe eines gespeicherten
						Platzes kommst – ganz automatisch. Mehr Zeit für den Moment, weniger
						aufs Display starren.
					</p>
					<a
						href="#preis"
						class="mt-8 inline-block rounded-full bg-brand-blue px-8 py-4 text-lg font-semibold text-white shadow-lg transition hover:scale-105 hover:shadow-xl"
						data-i18n="heroCta">Start bummeln</a>
				</div>
				<!-- Right: app visuals -->
				<div class="flex flex-1 items-center justify-center">
					<div class="relative">
						<img
							src="/app-icon.png"
							alt="Bummeln App Icon"
							class="h-40 w-40 rounded-3xl shadow-lg md:h-48 md:w-48"
						/>
						<!-- Notification mock (optional) -->
						<img
							src="/notification.png"
							alt="Beispiel Push-Benachrichtigung"
							class="absolute top-full left-1/2 mt-6 w-[32rem] max-w-none -translate-x-1/2 rotate-2 rounded-xl md:mt-8 md:w-[36rem]"
						/>
					</div>
				</div>
			</div>
		</header>

		<!-- Features --------------------------------------------------------------->
		<section id="features" class="mx-auto max-w-5xl px-6 py-24">
			<h2 class="mb-12 text-center text-3xl font-bold md:text-4xl">
				Was Bummeln für dich macht
			</h2>
			<div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
				<div class="rounded-xl border-2 border-brand-pink p-6 shadow-sm transition transform duration-200 hover:-translate-y-1 hover:shadow-lg hover:bg-brand-pink/5 reveal">
					<h3 class="mb-2 text-xl font-semibold">Ort-Reminder</h3>
					<p>
						Push-Benachrichtigung, sobald du einem gespeicherten Ort bis auf die
						von dir gewählte Distanz näherkommst.
					</p>
				</div>
				<div class="rounded-xl border-2 border-brand-pink p-6 shadow-sm transition transform duration-200 hover:-translate-y-1 hover:shadow-lg hover:bg-brand-pink/5 reveal">
					<h3 class="mb-2 text-xl font-semibold">Persönliche Liste</h3>
					<p>
						Sammle Restaurants, Sehenswürdigkeiten oder versteckte Spots in
						einer übersichtlichen Liste.
					</p>
				</div>
				<div class="rounded-xl border-2 border-brand-pink p-6 shadow-sm transition transform duration-200 hover:-translate-y-1 hover:shadow-lg hover:bg-brand-pink/5 reveal">
					<h3 class="mb-2 text-xl font-semibold">Weltkarte</h3>
					<p>
						Sieh sofort, wo sich deine Orte befinden und plane deinen nächsten
						Spaziergang oder Trip.
					</p>
				</div>
				<div class="rounded-xl border-2 border-brand-pink p-6 shadow-sm transition transform duration-200 hover:-translate-y-1 hover:shadow-lg hover:bg-brand-pink/5 reveal">
					<h3 class="mb-2 text-xl font-semibold">Besuchs-Tracker</h3>
					<p>
						Markiere Orte als besucht und behalte den Überblick über das, was
						du schon erlebt hast.
					</p>
				</div>
				<div class="rounded-xl border-2 border-brand-pink p-6 shadow-sm transition transform duration-200 hover:-translate-y-1 hover:shadow-lg hover:bg-brand-pink/5 reveal">
					<h3 class="mb-2 text-xl font-semibold">Offline-tauglich</h3>
					<p>
						Deine Liste bleibt auch ohne Internet abrufbar – perfekt für Städterips
						im Ausland.
					</p>
				</div>
				<div class="rounded-xl border-2 border-brand-pink p-6 shadow-sm transition transform duration-200 hover:-translate-y-1 hover:shadow-lg hover:bg-brand-pink/5 reveal">
					<h3 class="mb-2 text-xl font-semibold">Datenschutz first</h3>
					<p>
						Alle Daten bleiben auf deinem Gerät. Wir sammeln keine
						Bewegungs-Profile.
					</p>
				</div>
			</div>
		</section>

		<!-- Screenshots ------------------------------------------------------------>
		<section class="bg-slate-50 py-24">
			<div class="mx-auto max-w-5xl px-6">
				<h2 class="mb-12 text-center text-3xl font-bold md:text-4xl">
					Das erwartet dich
				</h2>
				<div class="flex flex-col items-center gap-8 md:flex-row md:justify-center">
					<img
						src="/detail.jpeg"
						alt="Detailansicht – Screenshot"
						class="w-full max-w-xs rounded-2xl border border-brand-pink shadow-md md:order-1 reveal"
					/>
					<div class="flex-1 max-w-lg md:order-2 reveal">
						<h3 class="mb-4 text-3xl font-bold md:text-4xl">Infos & Route auf einem Knopfdruck</h3>
						<p class="text-lg md:text-xl">
							Starte direkt eine <strong>Route</strong> zu deinem Platz und hinterlasse
							persönliche <strong>Notizen</strong> – so behältst du alle Infos an
							einem Ort.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Benefits --------------------------------------------------------------->
		<section class="mx-auto max-w-5xl px-6 py-24">
			<div class="grid items-center gap-12 md:grid-cols-2">
				<div>
					<h2 class="mb-6 text-3xl font-bold md:text-4xl">
						Mehr Kopf hoch, weniger Kopf runter
					</h2>
					<p class="mb-4 text-lg">
						Bummeln macht dein Smartphone zur dezenten Reisebegleitung. Du musst
						nicht mehr permanent nachschauen, ob du schon nah genug an deinem
						Ziel bist. Stattdessen hörst du das dezente Ping, hebst den Blick
						und entdeckst die Stadt mit allen Sinnen.
					</p>
					<p class="text-lg">
						So wird jede Reise entspannter, spontaner und einfach schöner.
					</p>
				</div>
				<img
					src="/map.jpeg"
					alt="Weltkarte Ansicht – Screenshot"
					class="w-full max-w-xs rounded-2xl border border-brand-pink shadow-md reveal"
				/>
			</div>
		</section>

		<!-- Price ------------------------------------------------------------------>
		<section
			id="preis"
			class="bg-brand-pink/10 py-24 text-center backdrop-blur-sm reveal"
		>
			<h2 class="text-4xl font-extrabold">Einmal zahlen, für immer bummeln</h2>
			<p class="mt-4 text-lg">
				Bummeln kostet einmalig <span class="font-semibold">1,99 €</span>. Keine
				Abos, keine versteckten Gebühren.
			</p>
			<!-- TODO: Replace placeholder ID with the real App Store URL once available -->
			<a
				href="https://apps.apple.com/app/bummeln/idXXXXXXXX"
				class="mt-8 inline-block rounded-full bg-brand-blue px-10 py-5 text-xl font-bold text-white shadow-lg transition hover:scale-105 hover:shadow-xl"
				>Jetzt im App Store</a
			>
		</section>

		<!-- Video ------------------------------------------------------------------>
		<section class="mx-auto max-w-5xl px-6 py-24">
			<div class="flex flex-col items-center gap-12 md:flex-row md:justify-center">
				<!-- Video Embed -->
				<div class="relative w-full aspect-video max-w-xl rounded-2xl border border-brand-pink shadow-md reveal">
					<iframe
						src="https://www.youtube.com/embed/82IPP38tjkE?rel=0"
						title="Bummeln App Test in Japan"
						allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
						allowfullscreen
						class="absolute inset-0 h-full w-full rounded-2xl"
					></iframe>
				</div>

				<!-- Copy -->
				<div class="flex-1 max-w-lg reveal">
					<h3 class="mb-4 text-3xl font-bold md:text-4xl">Unterwegs in Japan</h3>
					<p class="text-lg md:text-xl">
						Begleite uns auf einen Spaziergang durch Tokio und sieh, wie <strong>Bummeln</strong>
						dich ganz ohne Karten-App zu versteckten Spots führt. So einfach funktioniert die
						App – auch auf der anderen Seite der Welt.
					</p>
				</div>
			</div>
		</section>

		<!-- Footer ----------------------------------------------------------------->
		<footer class="bg-slate-900 px-6 py-12 text-center text-slate-300">
			<p>
				© {new Date().getFullYear()} Bummeln. Alle Rechte vorbehalten. ·
				<a href="/impressum" class="underline">Impressum</a> ·
				<a href="/privacy" class="underline">Datenschutz</a>
			</p>
		</footer>

		<!-- Parallax & Reveal Scripts -->
		<style is:inline>
			.reveal{opacity:0;transform:translateY(1rem);transition:opacity .6s ease,transform .6s ease}
			.reveal-visible{opacity:1;transform:translateY(0)}
		</style>
		<script is:inline>
			// --- Simple i18n ---
			const T={
			  de:{
				heroHeadline:`Bummeln&nbsp;– <span class=\"relative inline-block before:absolute before:-inset-y-2 before:-inset-x-2 before:-skew-y-3 before:bg-brand-blue/60 before:rounded-sm before:-z-10\">Orte&nbsp;erleben</span>,<br class=\"hidden md:inline\" />nicht Karten scrollen`,
				heroCta:'Jetzt losbummeln'
			  }
			};

			const setLang=lang=>{
			  // replace texts if translation exists
			  document.querySelectorAll('[data-i18n]').forEach(el=>{
				const key=el.dataset.i18n;
				if(T[lang] && T[lang][key]) {
				  el.innerHTML = T[lang][key];
				} else if(lang==='en') {
				  // restore default (hard-coded) content by taking initial HTML from attribute
				  el.innerHTML = el.dataset.en || el.innerHTML;
				}
			  });
			  // button highlight / opacity
			  document.querySelectorAll('.lang-btn').forEach(btn=>{
				const active = btn.dataset.lang===lang;
				btn.classList.toggle('font-semibold', active);
				btn.classList.toggle('opacity-60', !active);
			  });
			  localStorage.setItem('lang',lang);
			};

			// store original english text for fallback
			document.querySelectorAll('[data-i18n]').forEach(el=>{
			  el.dataset.en = el.innerHTML;
			});

			const initial = new URL(location).searchParams.get('lang') || localStorage.getItem('lang') || 'en';
			setLang(initial);

			document.querySelectorAll('.lang-btn').forEach(btn=>btn.addEventListener('click',()=>{
			  const l=btn.dataset.lang;setLang(l);
			  const url=new URL(location);url.searchParams.set('lang',l);history.replaceState({},'',url);
			}));

            // Reveal on scroll
			const io=new IntersectionObserver((entries)=>{
				entries.forEach(e=>{if(e.isIntersecting){e.target.classList.add('reveal-visible');io.unobserve(e.target);}});
			},{threshold:0.15});
			document.querySelectorAll('.reveal').forEach(el=>io.observe(el));
		</script>
	</body>
</html>
